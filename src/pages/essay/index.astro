---
import BaseLayout from '../../layouts/BaseLayout.astro';
import EssayCard from '../../components/EssayCard.astro';
import { getPublished, isReservedSlug } from '../../lib/content';
import { getListExcerpt } from '../../utils/excerpt';
import { PAGE_SIZE_ESSAY } from '../../../site.config.mjs';

const base = import.meta.env.BASE_URL ?? '/';
const baseNormalized = base.endsWith('/') ? base : `${base}/`;
const withBase = (path) => {
  if (!path || path === '/') return baseNormalized;
  const clean = path.startsWith('/') ? path.slice(1) : path;
  return `${baseNormalized}${clean}`;
};

const essays = await getPublished('essay', {
  orderBy: (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
});

const visibleEssays = essays.filter((entry) => !isReservedSlug(entry.data.slug ?? entry.id));
const totalPages = Math.ceil(visibleEssays.length / PAGE_SIZE_ESSAY);
const currentPage = 1;
const pageEssays = visibleEssays.slice(0, PAGE_SIZE_ESSAY);
const showPagination = totalPages > 1;
const prevHref = null;
const nextHref = currentPage < totalPages ? withBase(`/essay/page/${currentPage + 1}/`) : null;
---

<BaseLayout title="随笔" bodyClass="essay-page">
  <div class="page-header page-header--essay">
    <h1 class="page-title">随笔</h1>
    <span class="page-subtitle">随笔与杂记，共 {visibleEssays.length} 篇 · <a href={withBase('/essay/rss.xml')}>RSS</a></span>
  </div>

  <div class="list">
    {pageEssays.map((e) => (
      <EssayCard
        href={withBase(`/archive/${e.data.slug ?? e.id}/`)}
        title={e.data.title}
        excerpt={getListExcerpt(e)}
        date={e.data.date}
        tag={e.data.tags?.[0]}
        badge={e.data.badge}
      />
    ))}
  </div>

  {showPagination && (
    <nav class="pagination" aria-label="随笔分页">
      <div class="pagination__inner">
        {prevHref ? (
          <a class="pagination__link" rel="prev" href={prevHref}>上一页</a>
        ) : null}
        {nextHref ? (
          <a class="pagination__link pagination__link--next" rel="next" href={nextHref}>下一页</a>
        ) : null}
      </div>
    </nav>
  )}
</BaseLayout>
