---
import { render } from 'astro:content';
import { getPublished, isReservedSlug } from '../../lib/content';
import ArticleLayout from '../../layouts/ArticleLayout.astro';

const base = import.meta.env.BASE_URL ?? '/';
const baseNormalized = base.endsWith('/') ? base : `${base}/`;
const withBase = (path) => {
  if (!path || path === '/') return baseNormalized;
  const clean = path.startsWith('/') ? path.slice(1) : path;
  return `${baseNormalized}${clean}`;
};

export async function getStaticPaths() {
  const essays = await getPublished('essay', {
    orderBy: (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
  });
  const archiveEssays = essays.filter((entry) => !isReservedSlug(entry.data.slug ?? entry.id));
  return archiveEssays.map((entry, index) => {
    const prevEntry = archiveEssays.at(index - 1);
    const nextEntry = archiveEssays.at(index + 1);
    return {
      params: { slug: entry.data.slug ?? entry.id },
      props: {
        entry,
        prev: prevEntry
          ? { href: withBase(`/archive/${prevEntry.data.slug ?? prevEntry.id}/`), title: prevEntry.data.title }
          : null,
        next: nextEntry
          ? { href: withBase(`/archive/${nextEntry.data.slug ?? nextEntry.id}/`), title: nextEntry.data.title }
          : null
      }
    };
  });
}

const { entry, prev, next } = Astro.props;
const { Content } = await render(entry);
---

<ArticleLayout entry={entry} Content={Content} prev={prev} next={next} />
